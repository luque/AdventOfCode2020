{ #category : #tests }
AoCDay3Test >> testMultiplyNumberOfTrees [

	| slopes result |
	slopes := { 
		          (1 @ 1).
		          (3 @ 1).
		          (5 @ 1).
		          (7 @ 1).
		          (1 @ 2) }.
		
	result := (slopes collect: [ :slope | 
		           (self forestMapClass fromString: day3Map slope: slope)
			           countTreesOnPath ]) reduce: [ :a :b | a * b ].
	self assert: result equals: 2106818610
]

{ #category : #tests }
AoCDay3Test >> testNumberOfTreesForPart1Input [

	
	self
		assert: (self forestMapClass  fromString: day3Map  slope: 3 @ 1) countTreesOnPath
		equals: 237
]

{ #category : #tests }
AoCDay3Test >> testNumberOfTreesForSlope [

	self
		assert: (self forestMapClass fromString: mapAsString slope: 3 @ 1)
				countTreesOnPath
		equals: 1
]
